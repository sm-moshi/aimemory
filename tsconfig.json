{
	"extends": "./tsconfig.base.json",
	"compilerOptions": {
		"lib": [
			"ES2022"
		],
		"baseUrl": ".",
		"paths": {
			"@/*": [
				"src/*"
			],
			"@utils/*": [
				"src/utils/*"
			]
		},
		"typeRoots": [
			"./node_modules/@types"
		],
		"types": [
			"node",
			"vscode"
		],
		"noImplicitReturns": true,
		"noUnusedParameters": false
	},
	"include": [
		"src/**/*",
		"vitest.config.ts",
		"scripts/build-check.ts",
		"scripts/update-docs-date.ts",
		"scripts/refactor-imports.ts"
	],
	"exclude": [
		"src/webview/src",
		"src/webview/vite.config.ts",
		"src/webview/vitest.config.ts",
		"src/webview/vitest.setup.ts",
		"**/node_modules/**",
		"**/dist",
		"**/coverage",
		"**/out"
	],
	"references": [
		{
			"path": "./src/webview/tsconfig.node.json"
		}
	]
}
