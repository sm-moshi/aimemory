// See https://go.microsoft.com/fwlink/?LinkId=733558
// for the documentation about the tasks.json format
{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "build:dev",
			"type": "shell",
			"command": "pnpm build",
			"group": "build",
			"presentation": {
				"reveal": "always"
			},
			"problemMatcher": ["$tsc"]
		},
		{
			"label": "build:prod",
			"type": "shell",
			"command": "pnpm build:prod",
			"group": "build",
			"presentation": {
				"reveal": "always"
			},
			"problemMatcher": ["$tsc"]
		},
		{
			"label": "build:full",
			"type": "shell",
			"command": "pnpm build:full",
			"group": "build",
			"presentation": {
				"reveal": "always"
			},
			"problemMatcher": ["$tsc"]
		},
		{
			"label": "watch",
			"type": "shell",
			"command": "pnpm dev",
			"group": "build",
			"isBackground": true,
			"presentation": {
				"reveal": "always"
			},
			"problemMatcher": {
				"base": "$tsc-watch",
				"background": {
					"activeOnStart": true,
					"beginsPattern": "^\\s*\\[\\d+:\\d+:\\d+\\s+[AP]M\\]\\s+File change detected\\.",
					"endsPattern": "^\\s*\\[\\d+:\\d+:\\d+\\s+[AP]M\\]\\s+Found \\d+ errors?\\."
				}
			}
		},
		{
			"label": "test",
			"type": "shell",
			"command": "pnpm test",
			"group": "test",
			"presentation": {
				"reveal": "always"
			},
			"problemMatcher": []
		},
		{
			"label": "test:watch",
			"type": "shell",
			"command": "pnpm test:watch",
			"group": "test",
			"isBackground": true,
			"presentation": {
				"reveal": "always"
			},
			"problemMatcher": []
		},
		{
			"label": "test:coverage",
			"type": "shell",
			"command": "pnpm test:coverage",
			"group": "test",
			"presentation": {
				"reveal": "always"
			},
			"problemMatcher": []
		},
		{
			"label": "test:extension",
			"type": "shell",
			"command": "pnpm test:extension",
			"group": "test",
			"presentation": {
				"reveal": "always"
			},
			"problemMatcher": []
		},
		{
			"label": "mcp:test-server",
			"type": "shell",
			"command": "npx @modelcontextprotocol/inspector dist/index.cjs",
			"group": "test",
			"presentation": {
				"reveal": "always"
			},
			"problemMatcher": [],
			"dependsOn": "build:dev"
		},
		{
			"label": "package",
			"type": "shell",
			"command": "pnpm package",
			"group": "build",
			"presentation": {
				"reveal": "always"
			},
			"problemMatcher": [],
			"dependsOn": "build:prod"
		},
		{
			"label": "lint",
			"type": "shell",
			"command": "pnpm lint",
			"group": "build",
			"presentation": {
				"reveal": "always"
			},
			"problemMatcher": []
		},
		{
			"label": "lint:fix",
			"type": "shell",
			"command": "pnpm lint:fix",
			"group": "build",
			"presentation": {
				"reveal": "always"
			},
			"problemMatcher": []
		},
		{
			"label": "type-check",
			"type": "shell",
			"command": "pnpm type-check",
			"group": "build",
			"presentation": {
				"reveal": "always"
			},
			"problemMatcher": ["$tsc"]
		},
		{
			"label": "clean",
			"type": "shell",
			"command": "pnpm clean",
			"group": "build",
			"presentation": {
				"reveal": "silent"
			},
			"problemMatcher": []
		},
		{
			"label": "dev:parallel",
			"dependsOrder": "parallel",
			"dependsOn": ["watch", "test:watch"],
			"group": "build",
			"isBackground": true,
			"presentation": {
				"reveal": "always"
			},
			"problemMatcher": []
		}
	]
}
