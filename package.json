{
	"name": "aimemory",
	"displayName": "AI Memory",
	"publisher": "sm-moshi",
	"repository": {
		"url": "https://github.com/sm-moshi/aimemory"
	},
	"description": "Easily manage AI context for your projects using memory bank technique",
	"version": "0.8.0-dev.1",
	"engines": {
		"vscode": "^1.96.2",
		"pnpm": ">=10.11.0"
	},
	"icon": "dist/assets/icon.png",
	"categories": ["Other"],
	"main": "./dist/extension.cjs",
	"extensionTestsPath": "./out/test/suite/index.cjs",
	"activationEvents": [
		"onCommand:aimemory.startMCP",
		"onCommand:aimemory.stopServer",
		"onCommand:aimemory.openWebview",
		"onCommand:aimemory.updateMCPConfig",
		"onCommand:aimemory.showOutput"
	],
	"contributes": {
		"commands": [
			{
				"command": "aimemory.startMCP",
				"title": "AI Memory: Start MCP Server"
			},
			{
				"command": "aimemory.stopServer",
				"title": "AI Memory: Stop MCP Server"
			},
			{
				"command": "aimemory.openWebview",
				"title": "AI Memory: Open Dashboard"
			},
			{
				"command": "aimemory.updateMCPConfig",
				"title": "AI Memory: Update Cursor MCP Config"
			},
			{
				"command": "aimemory.showOutput",
				"title": "AI Memory: Show Output Channel"
			},
			{
				"command": "aimemory.setLogLevel",
				"title": "AI Memory: Set Log Level"
			}
		],
		"configuration": {
			"properties": {
				"aimemory.logLevel": {
					"type": "string",
					"enum": ["trace", "debug", "info", "warning", "error", "off"],
					"default": "info",
					"description": "Controls the verbosity of the AI Memory Output Channel."
				}
			}
		}
	},
	"scripts": {
		"dev": "npm-run-all -p watch:rollup webview:dev",
		"build": "pnpm run build:extension && pnpm run build:webview",
		"build:extension": "rollup -c rollup.config.js",
		"build:webview": "cd src/webview && pnpm run build",
		"build:prod": "pnpm run check-types && NODE_ENV=production rollup -c && cd src/webview && pnpm run build",
		"build:full": "pnpm run lint && cd src/webview && pnpm run lint && cd ../.. && pnpm run check-types && rollup -c && cd src/webview && pnpm run build",
		"watch:rollup": "rollup -c --watch",
		"webview:dev": "cd src/webview && pnpm run dev",
		"test": "vitest run --exclude 'src/test/extension/**'",
		"test:extension": "cross-env NODE_ENV=test npx vscode-test --extensions-dir .vscode-test/extensions --user-data-dir .vscode-test/user-data src/test/extension/vsCode*.test.ts src/test/extension/commandHandler.test.ts",
		"test:watch": "vitest watch",
		"test:coverage": "vitest run --coverage && pnpm -C src/webview run test:coverage",
		"lint": "biome check src",
		"lint:fix": "biome check src --write",
		"format": "biome format src --write",
		"check-types": "tsc --noEmit",
		"package": "pnpm run build:prod && pnpm vsce package --no-dependencies",
		"vscode:prepublish": "pnpm run build",
		"update-docs-date": "tsx scripts/update-docs-date.ts",
		"build-check": "tsx scripts/build-check.ts"
	},
	"devDependencies": {
		"@biomejs/biome": "^1.9.4",
		"@rollup/plugin-commonjs": "^28.0.3",
		"@rollup/plugin-json": "^6.1.0",
		"@rollup/plugin-node-resolve": "^16.0.1",
		"@rollup/plugin-swc": "^0.4.0",
		"@swc/core": "^1.11.29",
		"@types/node": "^20.17.56",
		"@types/vscode": "^1.96.0",
		"@vitest/coverage-v8": "^3.1.4",
		"@vscode/test-cli": "^0.0.11",
		"@vscode/test-electron": "^2.5.2",
		"@vscode/vsce": "^3.4.3-4",
		"cross-env": "^7.0.3",
		"npm-run-all": "^4.1.5",
		"rollup": "^4.41.1",
		"rollup-plugin-copy": "^3.5.0",
		"tsx": "^4.19.4",
		"typescript": "^5.8.3",
		"vitest": "^3.2.0"
	},
	"dependencies": {
		"@modelcontextprotocol/sdk": "^1.12.1",
		"zod": "^3.25.42"
	},
	"packageManager": "pnpm@10.11.0",
	"pnpm": {
		"overrides": {
			"jwa": "^2.0.1"
		},
		"ignoredBuiltDependencies": ["keytar"],
		"onlyBuiltDependencies": [
			"@biomejs/biome",
			"@swc/core",
			"@vscode/vsce-sign",
			"esbuild",
			"keytar"
		]
	},
	"type": "module"
}
