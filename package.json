{
	"name": "aimemory",
	"displayName": "Cursor AI Memory",
	"publisher": "sm-moshi",
	"repository": {
		"url": "https://github.com/sm-moshi/aimemory"
	},
	"description": "Easily manage AI context for your projects using memory bank technique",
	"version": "0.8.0-dev.5",
	"type": "module",
	"engines": {
		"vscode": "^1.96.2",
		"pnpm": ">=10.11.1",
		"node": ">=20.19.0"
	},
	"packageManager": "pnpm@10.11.1",
	"pnpm": {
		"onlyBuiltDependencies": [
			"@biomejs/biome",
			"@swc/core",
			"@tailwindcss/oxide",
			"@vscode/vsce-sign",
			"esbuild",
			"keytar"
		]
	},
	"icon": "dist/assets/icon.png",
	"categories": ["Other"],
	"main": "./dist/extension.cjs",
	"extensionTestsPath": "./out/test/suite/index.cjs",
	"contributes": {
		"commands": [
			{
				"command": "aimemory.startMCP",
				"title": "AI Memory: Start MCP Server"
			},
			{
				"command": "aimemory.stopServer",
				"title": "AI Memory: Stop MCP Server"
			},
			{
				"command": "aimemory.openWebview",
				"title": "AI Memory: Open Dashboard"
			},
			{
				"command": "aimemory.updateMCPConfig",
				"title": "AI Memory: Update Cursor MCP Config"
			},
			{
				"command": "aimemory.showOutput",
				"title": "AI Memory: Show Output Channel"
			},
			{
				"command": "aimemory.setLogLevel",
				"title": "AI Memory: Set Log Level"
			}
		],
		"configuration": {
			"properties": {
				"aimemory.logLevel": {
					"type": "string",
					"enum": ["trace", "debug", "info", "warning", "error", "off"],
					"default": "info",
					"description": "Controls the verbosity of the AI Memory Output Channel."
				}
			}
		}
	},
	"scripts": {
		"build": "pnpm build:extension && pnpm build:webview",
		"build:extension": "rollup -c rollup.config.js",
		"build:webview": "cd src/webview && pnpm run build",
		"dev": "pnpm run --parallel watch:extension webview:dev",
		"test": "vitest run --exclude 'src/test/extension/**' && cd src/webview && pnpm run test",
		"test:coverage": "vitest run --coverage --exclude 'src/test/extension/**' && cd src/webview && pnpm run test:coverage",
		"lint": "biome check --write .",
		"format": "biome format --write .",
		"check": "tsgo -p tsconfig.json --noEmit && pnpm lint",
		"package": "pnpm check && pnpm build && pnpm vsce package --no-dependencies",
		"watch:extension": "rollup -c -w",
		"webview:dev": "cd src/webview && pnpm run dev",
		"vscode:prepublish": "pnpm run build"
	},
	"devDependencies": {
		"@biomejs/biome": "^1.9.4",
		"@rollup/plugin-alias": "^5.1.1",
		"@rollup/plugin-commonjs": "^28.0.3",
		"@rollup/plugin-json": "^6.1.0",
		"@rollup/plugin-node-resolve": "^16.0.1",
		"@rollup/plugin-swc": "^0.4.0",
		"@swc/core": "^1.11.31",
		"@types/glob": "^8.1.0",
		"@types/node": "^20.19.0",
		"@types/vscode": "1.96.0",
		"@typescript/native-preview": "^7.0.0-dev.20250607.1",
		"@vitest/coverage-v8": "^3.2.2",
		"@vscode/test-cli": "^0.0.11",
		"@vscode/vsce": "^3.5.0",
		"glob": "^11.0.2",
		"rollup": "^4.42.0",
		"rollup-plugin-analyzer": "^4.0.0",
		"rollup-plugin-copy": "^3.5.0",
		"tsx": "^4.19.4",
		"typescript": "^5.8.3",
		"vite-tsconfig-paths": "^5.1.4",
		"vitest": "^3.2.2"
	},
	"dependencies": {
		"@modelcontextprotocol/sdk": "^1.12.1",
		"commander": "^14.0.0",
		"gray-matter": "^4.0.3",
		"zod": "^3.25.56"
	}
}
